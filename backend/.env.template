# Шаблон файла конфигурации окружения
# Скопируйте этот файл в .env и настройте под ваше окружение

# База данных
DATABASE_URL=postgresql://postgres:password@localhost:5432/control_system?client_encoding=utf8
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=control_system
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Безопасность
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Пароли
PASSWORD_MIN_LENGTH=8

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Файлы
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=uploads
ALLOWED_FILE_EXTENSIONS=[".jpg", ".jpeg", ".png", ".pdf", ".doc", ".docx", ".txt"]
